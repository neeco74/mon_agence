{% extends 'base.html.twig' %}

{% block title 'Voir tous nos biens' %}

{% block body %}
     <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
               <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">

        <h1>Voir tous nos biens</h1>

            <div class="row">
                {% for bien in biens %}
                    <div class="col-md-4">
                        {% include 'biens/_biens.html.twig' %}
                    </div>
                {% endfor %} 
            </div>
    
        <div class="pagination">
            {{ knp_pagination_render(biens) }}
        </div>


 

    </div>


{% endblock %}