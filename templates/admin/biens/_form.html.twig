{{ form_start(form) }}

    {# Verifier si la route est annonces_edit" on affiche les images #}
	{% if app.request.attributes.get('_route') == 'admin_biens_edit' %}
		<h2>Images</h2>
		{% for image in bien.images %}
			<div>
				<img src ="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
                <a href="{{ path('admin_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>

			</div>
		{% endfor %}
			
	{% endif %}

        <div class="row">
            <div class="col-md-4">{{ form_row(form.titre) }}</div>
            <div class="col-md-4">{{ form_row(form.surface) }}</div>
            <div class="col-md-4">{{ form_row(form.price) }}</div>
        </div>
        <div class="row">
            <div class="col-md-2">{{ form_row(form.rooms) }}</div>
            <div class="col-md-2">{{ form_row(form.bedrooms) }}</div>
            <div class="col-md-2">{{ form_row(form.heat) }}</div>
            <div class="col-md-2">{{ form_row(form.floor) }}</div>
        </div>
        <div class="row">
            

            <div class="col-md-12">{{ form_row(form.sold) }}</div>
        </div>
            
        <div class="row">
            <div class="col-md-9">{{ form_row(form.address) }}</div>
            <div class="col-md-2">{{ form_row(form.city) }}</div>
            <div class="col-md-1">{{ form_row(form.postal_code) }}</div>
        </div>


        {{ form_rest(form) }}

        <button class="btn btn-primary">{{ button | default('Enregistrer') }}</button>
        
        {{ form_end(form) }}

    </div>
